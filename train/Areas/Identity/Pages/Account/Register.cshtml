@page
@model train.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create your shopping account";
    ViewData["HideFooter"] = true;   // 👈 tell layout to not render footer here

}

<!-- MAIN CONTAINER -->
<div class="container py-5 text-light" style="background-color:#000;">
    <div class="row g-4 align-items-center justify-content-center">

        <!-- Brand / Benefits panel -->
        <div class="col-lg-5 d-none d-lg-block">
            <div class="p-5 rounded-4 border border-light text-white shadow"
                 style="background-color:#111;">
                <h1 class="fw-bold mb-3">
                    Welcome to <span class="text-white-50">ShopSquare</span>
                </h1>
                <p class="lead text-secondary mb-4">
                    Track orders, save addresses, and unlock exclusive deals.
                </p>
                <ul class="list-unstyled small mb-0 text-white-50">
                    <li class="mb-2">✔ Faster checkout & order history</li>
                    <li class="mb-2">✔ Personalized recommendations</li>
                    <li class="mb-2">✔ Early access to sales</li>
                </ul>
            </div>
        </div>

        <!-- Registration Card -->
        <div class="col-lg-6">
            <div class="card shadow border-0 rounded-4 text-light" style="background-color:#111;">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center me-3"
                             style="width:50px;height:50px;background-color:#222;">
                            <i class="bi bi-bag text-white fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-0 text-white">Create your account</h2>
                            <small class="text-secondary">It only takes a minute</small>
                        </div>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-white-50"></label>
                            <input asp-for="Input.Email" class="form-control form-control-lg bg-dark text-white border-secondary"
                                   placeholder="you@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-white-50"></label>
                            <input asp-for="Input.Password" class="form-control form-control-lg bg-dark text-white border-secondary"
                                   placeholder="Create a strong password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label text-white-50"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg bg-dark text-white border-secondary"
                                   placeholder="Re-enter your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Input.City" class="form-label text-white-50"></label>
                                <input asp-for="Input.City" class="form-control form-control-lg bg-dark text-white border-secondary"
                                       placeholder="e.g. Karachi" />
                                <span asp-validation-for="Input.City" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.Age" class="form-label text-white-50"></label>
                                <input asp-for="Input.Age" class="form-control form-control-lg bg-dark text-white border-secondary"
                                       placeholder="18" min="1" />
                                <span asp-validation-for="Input.Age" class="text-danger small"></span>
                            </div>
                        </div>

                        <button id="registerSubmit" type="submit"
                                class="btn btn-light btn-lg w-100 mb-3 fw-semibold text-dark">
                            Create Account
                        </button>

                        <p class="text-center text-secondary mb-0">
                            Already have an account?
                            <a asp-page="./Login" class="link-light text-decoration-underline">Log in</a>
                        </p>
                    </form>
                </div>
            </div>

            <div class="d-flex gap-3 mt-3 small text-secondary justify-content-center">
                <span>🔒 Secure checkout</span>
                <span>↩️ Easy returns</span>
                <span>🚚 Fast delivery</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        html, body {
            background: #000;
        }

        .auth-full {
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        footer.footer {
            border-top: 0 !important;
            background: #000 !important;
        }
    </style>
}

