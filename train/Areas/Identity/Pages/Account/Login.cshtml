@page
@model train.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    ViewData["HideFooter"] = true;   // 👈 tell layout to not render footer here

}




<div class="container py-5 text-light" style="background-color:#000;">
    <div class="row g-4 justify-content-center align-items-center">

        <!-- Left: Welcome panel -->
        <div class="col-lg-5 d-none d-lg-block">
            <div class="p-5 rounded-4 border border-light shadow" style="background-color:#111;">
                <h1 class="fw-bold mb-3 text-white">Welcome Back</h1>
                <p class="lead text-secondary mb-4">
                    Log in to access your account, view orders, and continue shopping.
                </p>
                <ul class="list-unstyled small text-white-50 mb-0">
                    <li class="mb-2">✔ Track your recent orders</li>
                    <li class="mb-2">✔ Manage your profile & addresses</li>
                    <li class="mb-2">✔ Get personalized recommendations</li>
                </ul>
            </div>
        </div>

        <!-- Right: Login form -->
        <div class="col-lg-6">
            <div class="card shadow border-0 rounded-4 text-light" style="background-color:#111;">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center me-3"
                             style="width:50px;height:50px;background-color:#222;">
                            <i class="bi bi-person text-white fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-0 text-white">Sign in to your account</h2>
                            <small class="text-secondary">Welcome back to ShopSquare</small>
                        </div>
                    </div>

                    <form id="account" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.EmailOrUsername" class="form-label text-white-50"></label>
                            <input asp-for="Input.EmailOrUsername" class="form-control form-control-lg bg-dark text-white border-secondary"
                                   placeholder="you@example.com" autocomplete="username" />
                            <span asp-validation-for="Input.EmailOrUsername" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-white-50"></label>
                            <input asp-for="Input.Password" class="form-control form-control-lg bg-dark text-white border-secondary"
                                   placeholder="Your password" autocomplete="current-password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label text-white-50"></label>
                        </div>

                        <button type="submit" class="btn btn-light btn-lg w-100 mb-3 fw-semibold text-dark">
                            Log in
                        </button>

                        <p class="text-center text-secondary mb-0">
                            Don’t have an account?
                            <a asp-page="./Register" class="link-light text-decoration-underline">
                                Sign up here
                            </a>
                        </p>
                    </form>
                </div>
            </div>

            <div class="d-flex gap-3 mt-3 small text-secondary justify-content-center">
                <span>🔒 Secure access</span>
                <span>🛒 Easy shopping</span>
                <span>⚡ Fast support</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        html, body {
            background: #000;
        }

        .auth-full {
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        footer.footer {
            border-top: 0 !important;
            background: #000 !important;
        }
    </style>
}

