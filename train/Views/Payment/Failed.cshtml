@model train.ViewModels.PaymentResultVm
@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container py-5 text-center">
    <div class="mb-4 text-danger">
        <i class="bi bi-x-circle display-1"></i>
    </div>
    
    <h1 class="mb-3">Payment Failed</h1>
    
    <div class="alert alert-danger d-inline-block text-start mb-4" style="max-width: 500px;">
        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Transaction Error</h5>
        <p class="mb-0">@Model.Message</p>
        @if (!string.IsNullOrEmpty(Model.TransactionId))
        {
            <hr>
            <small>Ref: @Model.TransactionId</small>
        }
    </div>

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Payment" asp-action="Process" asp-route-orderId="@Model.OrderId" class="btn btn-primary">
            <i class="bi bi-arrow-repeat"></i> Try Again
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            Return to Home
        </a>
    </div>
</div>
