@model PaymentResultVm

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="text-success mb-3">
                        <i class="fas fa-check-circle fa-5x"></i>
                    </div>
                    <h2 class="text-success">Payment Successful!</h2>
                    <p class="lead">@Model.Message</p>

                    <div class="alert alert-light mt-4">
                        <p><strong>Order #:</strong> @Model.OrderId</p>
                        <p><strong>Amount Paid:</strong> $@Model.Amount.ToString("N2")</p>
                        <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                        @if (!string.IsNullOrEmpty(Model.TransactionId))
                        {
                            <p><strong>Transaction ID:</strong> @Model.TransactionId</p>
                        }
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Details", "MyOrders", new { id = Model.OrderId })" class="btn btn-primary">
                            View Order Details
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>