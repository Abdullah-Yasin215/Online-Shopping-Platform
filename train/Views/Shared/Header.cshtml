@* _Header.cshtml — tailored to your Views folders (Admin, Cart, Catalog, Categories, Checkout, Home, MyOrders, Orders, Products, Shared) *@
@using Microsoft.AspNetCore.Identity
@using train.Areas.Identity.Data
@inject SignInManager<appusercontext> SignInManager
@inject UserManager<appusercontext> UserManager

<!-- Top utility bar -->
<div class="bg-dark text-light small py-1 d-none d-md-block">
    <div class="container d-flex justify-content-between align-items-center">
        <div>
            <i class="bi bi-truck"></i>
            <span class="ms-1">Free shipping on orders over $49</span>
        </div>
        <div class="d-flex gap-3 align-items-center">
            <a class="link-light text-decoration-none" asp-controller="MyOrders" asp-action="Index"><i class="bi bi-geo"></i> Track orders</a>
            <a class="link-light text-decoration-none" asp-controller="Home" asp-action="Contact"><i class="bi bi-life-preserver"></i> Support</a>
            <div class="dropdown">
                <a class="dropdown-toggle link-light text-decoration-none" href="#" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-globe2"></i> EN / USD</a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li class="dropdown-header">Language</li>
                    <li><a class="dropdown-item" href="#">English</a></li>
                    <li><a class="dropdown-item" href="#">اردو</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li class="dropdown-header">Currency</li>
                    <li><a class="dropdown-item" href="#">USD</a></li>
                    <li><a class="dropdown-item" href="#">PKR</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Promo ribbon (closable) -->
<div class="alert alert-primary border-0 rounded-0 text-center mb-0 alert-dismissible fade show" role="alert">
    🎉 Weekend deal: 10% off electronics with code <strong>WEEKEND10</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<header class="shadow-sm sticky-top bg-body">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container py-2">
            <!-- Brand -->
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-bag-check fs-3 me-2"></i>
                <span>Crowt</span>
            </a>

            <!-- Mobile toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Search -->
            <form class="d-none d-lg-flex ms-lg-4 flex-grow-1" asp-controller="Catalog" asp-action="Search" method="get" role="search">
                <div class="input-group">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">All</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">All Categories</a></li>
                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Electronics</a></li>
                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Fashion</a></li>
                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Home & Kitchen</a></li>
                    </ul>
                    <input name="q" type="search" class="form-control" placeholder="Search products, brands, and more…" aria-label="Search" />
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                </div>
            </form>

            <!-- Icons / quick actions -->
            <div class="d-flex align-items-center ms-lg-3 gap-2">
                <button id="themeToggle" class="btn btn-outline-secondary d-none d-lg-inline-flex" type="button" aria-label="Toggle dark mode">
                    <i class="bi bi-moon-stars"></i>
                </button>

                <a class="btn btn-outline-secondary position-relative" asp-controller="Cart" asp-action="Index" aria-label="Cart">
                    <i class="bi bi-bag"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">@((ViewBag.CartCount ?? 0))</span>
                </a>

                <!-- Account -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="dropdown">
                        <a class="btn btn-primary dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-2"></i>
                            <span>Hello @UserManager.GetUserName(User)</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="MyOrders" asp-action="Index"><i class="bi bi-receipt me-2"></i> My Orders</a></li>
                            <li><a class="dropdown-item" asp-controller="Catalog" asp-action="Index"><i class="bi bi-box me-2"></i> Products</a></li>
                            <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags me-2"></i> Categories</a></li>
                            @* Admin link shown only if in Admin role (optional) *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i> Admin Dashboard</a></li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button id="logout" type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i> Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="d-none d-lg-flex align-items-center gap-2">
                        <a class="btn btn-outline-primary" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-person"></i> Login</a>
                        <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
                    </div>
                }
            </div>
        </div>

        <div class="container">
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto my-2 my-lg-0">
                    <!-- Categories mega menu -->
                    <li class="nav-item dropdown position-static">
                        <a class="nav-link dropdown-toggle fw-semibold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-grid-3x3-gap"></i> Categories
                        </a>
                        <div class="dropdown-menu w-100 p-4 border-0 shadow-lg">
                            <div class="row g-4">
                                <div class="col-12 col-md-3">
                                    <h6 class="dropdown-header">Browse</h6>
                                    <a class="dropdown-item" asp-controller="Categories" asp-action="Index">All Categories</a>
                                    <a class="dropdown-item" asp-controller="Catalog" asp-action="Index">All Products</a>
                                </div>
                                <div class="col-12 col-md-3">
                                    <h6 class="dropdown-header">Shop</h6>
                                    <a class="dropdown-item" asp-controller="Catalog" asp-action="Index">Catalog</a>
                                    <a class="dropdown-item" asp-controller="Catalog" asp-action="Search">Search</a>
                                </div>
                                <div class="col-12 col-md-3">
                                    <h6 class="dropdown-header">Orders</h6>
                                    <a class="dropdown-item" asp-controller="Cart" asp-action="Index">Cart</a>
                                    <a class="dropdown-item" asp-controller="Checkout" asp-action="Index">Checkout</a>
                                    <a class="dropdown-item" asp-controller="MyOrders" asp-action="Index">My Orders</a>
                                </div>
                                <div class="col-12 col-md-3">
                                    <div class="card border-0 h-100 bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title">Deal of the Day</h6>
                                            <p class="card-text small">Save up to 40% on noise-cancelling headphones.</p>
                                            <a class="btn btn-sm btn-primary" asp-controller="Catalog" asp-action="Index">Shop Now</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item"><a class="nav-link" asp-controller="Catalog" asp-action="Index"><i class="bi bi-lightning-charge"></i> Deals</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Catalog" asp-action="Index"><i class="bi bi-stars"></i> New arrivals</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About"><i class="bi bi-journal-text"></i> About</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2"></i> Admin</a></li>
                    }
                    <li class="nav-item d-lg-none mt-2">
                        <form class="d-flex" asp-controller="Catalog" asp-action="Search" method="get">
                            <input name="q" class="form-control me-2" type="search" placeholder="Search products…" aria-label="Search">
                            <button class="btn btn-outline-primary" type="submit">Search</button>
                        </form>
                    </li>
                </ul>

                <!-- Mobile auth buttons -->
                <div class="d-lg-none border-top pt-3">
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-outline-primary w-100 mb-2" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-person"></i> Login</a>
                        <a class="btn btn-primary w-100" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-secondary w-100" asp-controller="MyOrders" asp-action="Index"><i class="bi bi-gear"></i> My Orders</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

@* Footer widgets adapted to your controllers *@
<section class="py-5 bg-light border-top">
    <div class="container">
        <div class="row g-4">
            <div class="col-12 col-md-3">
                <h6 class="fw-bold mb-3">Customer Care</h6>
                <ul class="list-unstyled text-muted small">
                    <li><a class="text-decoration-none" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                    <li><a class="text-decoration-none" asp-controller="Checkout" asp-action="Index">Payment & Checkout</a></li>
                    <li><a class="text-decoration-none" asp-controller="MyOrders" asp-action="Index">Order Status</a></li>
                </ul>
            </div>
            <div class="col-12 col-md-3">
                <h6 class="fw-bold mb-3">Shop</h6>
                <ul class="list-unstyled text-muted small">
                    <li><a class="text-decoration-none" asp-controller="Catalog" asp-action="Index">Catalog</a></li>
                    <li><a class="text-decoration-none" asp-controller="Catalog" asp-action="Index">Products</a></li>
                    <li><a class="text-decoration-none" asp-controller="Categories" asp-action="Index">Categories</a></li>
                </ul>
            </div>
            <div class="col-12 col-md-3">
                <h6 class="fw-bold mb-3">Popular Categories</h6>
                <div class="d-flex flex-wrap gap-2">
                    <a class="badge rounded-pill text-bg-secondary text-decoration-none" asp-controller="Categories" asp-action="Index">Phones</a>
                    <a class="badge rounded-pill text-bg-secondary text-decoration-none" asp-controller="Categories" asp-action="Index">Laptops</a>
                    <a class="badge rounded-pill text-bg-secondary text-decoration-none" asp-controller="Categories" asp-action="Index">Appliances</a>
                    <a class="badge rounded-pill text-bg-secondary text-decoration-none" asp-controller="Categories" asp-action="Index">Fashion</a>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <h6 class="fw-bold mb-3">Subscribe</h6>
                <form class="d-flex gap-2" asp-controller="Home" asp-action="Subscribe" method="post">
                    <input type="email" name="email" class="form-control" placeholder="Email address" required>
                    <button class="btn btn-primary" type="submit">Join</button>
                </form>
                <p class="small text-muted mt-2">Get exclusive offers & updates.</p>
            </div>
        </div>
    </div>
</section>

