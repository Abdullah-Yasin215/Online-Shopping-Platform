@model train.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<h2>@Model.Name</h2>
<p>@Model.Description</p>
<dl class="row">
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>
    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
    <dt class="col-sm-2">Audience</dt>
    <dd class="col-sm-10">@Model.TargetAudience</dd>
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">Back</a>
