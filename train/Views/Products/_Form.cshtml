@model train.ViewModels.ProductFormViewModel
<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="col-md-4">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="TargetAudience" class="form-label"></label>
        <select asp-for="TargetAudience" id="targetAudienceSelect" class="form-select">
            <option>Men</option>
            <option>Women</option>
            <option>Boys</option>
            <option>Girls</option>
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" id="categorySelect" class="form-select" asp-items="Model.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Sizes" class="form-label">Sizes (comma-separated, e.g. S, M, L)</label>
        <input asp-for="Sizes" class="form-control" placeholder="S, M, L, XL" />
    </div>

    <div class="col-md-6">
        <label asp-for="Colors" class="form-label">Colors (comma-separated, e.g. Black, White)</label>
        <input asp-for="Colors" class="form-control" placeholder="Black, White, Gray" />
    </div>

    <div class="col-md-12">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span class="form-text">Paste an image URL (you already have upload logic elsewhere).</span>
    </div>
</div>
