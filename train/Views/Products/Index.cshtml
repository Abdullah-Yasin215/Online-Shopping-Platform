@model train.ViewModels.CatalogIndexViewModel
@{
    ViewData["Title"] = "Manage Products";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">@Model.Heading</h2>
            <p class="text-muted mb-0">Manage your product catalog</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Product
        </a>
    </div>

    @* Toolbar *@
    <partial name="_FilterToolbar" model="Model" />

    @* Offcanvas Sidebar *@
    <partial name="_FilterSidebar" model="Model" />

    @* Product Table *@
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Name</th>
                    <th>Audience</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th class="text-end">Stock</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Products.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            No products found matching your criteria.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var p in Model.Products)
                    {
                        <tr data-product-id="@p.Id">
                            <td class="ps-4">
                                <div class="fw-bold">@p.Name</div>
                                <small class="text-muted">Size: @(string.IsNullOrEmpty(p.Sizes) ? "N/A" : p.Sizes)</small>
                            </td>
                            <td>@p.TargetAudience</td>
                            <td>
                                @if (p.Category != null)
                                {
                                    <span class="badge bg-light text-dark border">@p.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@p.Price.ToString("C")</td>
                            <td class="text-end stock-cell fw-bold @(p.Stock < 10 ? "text-danger" : "text-success")">
                                @p.Stock
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary"
                                        title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary"
                                        title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger"
                                        title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    @if (Model.Pagination.TotalPages > 1)
    {
        <div class="mt-4 d-flex justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                            href="/admin/products?page=@(Model.Pagination.CurrentPage - 1)@(string.IsNullOrEmpty(Model.Query) ? "" : $"&q={Model.Query}")@(Model.CategoryId.HasValue ? $"&categoryId={Model.CategoryId}" : "")@(string.IsNullOrEmpty(Model.Audience) ? "" : $"&audience={Model.Audience}")@(Model.MinPrice.HasValue ? $"&minPrice={Model.MinPrice}" : "")@(Model.MaxPrice.HasValue ? $"&maxPrice={Model.MaxPrice}" : "")@(string.IsNullOrEmpty(Model.SelectedColor) ? "" : $"&color={Model.SelectedColor}")@(string.IsNullOrEmpty(Model.SelectedSize) ? "" : $"&size={Model.SelectedSize}")&sort=@Model.Sort">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Pagination.CurrentPage == i ? "active" : "")">
                            <a class="page-link"
                                href="/admin/products?page=@i@(string.IsNullOrEmpty(Model.Query) ? "" : $"&q={Model.Query}")@(Model.CategoryId.HasValue ? $"&categoryId={Model.CategoryId}" : "")@(string.IsNullOrEmpty(Model.Audience) ? "" : $"&audience={Model.Audience}")@(Model.MinPrice.HasValue ? $"&minPrice={Model.MinPrice}" : "")@(Model.MaxPrice.HasValue ? $"&maxPrice={Model.MaxPrice}" : "")@(string.IsNullOrEmpty(Model.SelectedColor) ? "" : $"&color={Model.SelectedColor}")@(string.IsNullOrEmpty(Model.SelectedSize) ? "" : $"&size={Model.SelectedSize}")&sort=@Model.Sort">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                            href="/admin/products?page=@(Model.Pagination.CurrentPage + 1)@(string.IsNullOrEmpty(Model.Query) ? "" : $"&q={Model.Query}")@(Model.CategoryId.HasValue ? $"&categoryId={Model.CategoryId}" : "")@(string.IsNullOrEmpty(Model.Audience) ? "" : $"&audience={Model.Audience}")@(Model.MinPrice.HasValue ? $"&minPrice={Model.MinPrice}" : "")@(Model.MaxPrice.HasValue ? $"&maxPrice={Model.MaxPrice}" : "")@(string.IsNullOrEmpty(Model.SelectedColor) ? "" : $"&color={Model.SelectedColor}")@(string.IsNullOrEmpty(Model.SelectedSize) ? "" : $"&size={Model.SelectedSize}")&sort=@Model.Sort">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/stock-live.js"></script>
}
