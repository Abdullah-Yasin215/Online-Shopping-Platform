@model train.ViewModels.HomePageViewModel
@{
    ViewData["Title"] = Model.Title;
}

<section class="container my-5 text-center">
    <h1 class="fw-bold display-6">@Model.Title</h1>
    <p class="text-muted mb-4">@Model.Subtitle</p>
</section>

@if (Model.NewArrivals?.Any() == true)
{
    <section class="container mb-5">
        <h3 class="fw-bold mb-3">New Arrivals</h3>
        <div class="row g-3">
            @foreach (var p in Model.NewArrivals!)
            {
                <div class="col-6 col-md-3">
                    @await Html.PartialAsync("ProductCard", p)
                </div>
            }
        </div>
    </section>
}

@if (Model.Essentials?.Any() == true)
{
    <section class="container mb-5">
        <h3 class="fw-bold mb-3">Essentials</h3>
        <div class="row g-3">
            @foreach (var p in Model.Essentials!)
            {
                <div class="col-6 col-md-3">
                    @await Html.PartialAsync("ProductCard", p)
                </div>
            }
        </div>
    </section>
}
