@model train.ViewModels.OrderConfirmationViewModel
@{
    ViewData["Title"] = "Order Confirmation";
}
<h2>Thank you! Your order is placed.</h2>
<hr />

<div class="mb-3">
    <div><strong>Order #</strong> @Model.OrderId</div>
    <div><strong>Date</strong> @Model.PlacedAtUtc.ToString("yyyy-MM-dd HH:mm") UTC</div>
    <div><strong>Status</strong> @Model.Status</div>
</div>

<div class="table-responsive">
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Item</th>
                <th>Details</th>
                <th class="text-end">Unit</th>
                <th>Qty</th>
                <th class="text-end">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td class="fw-bold">@i.Name</td>
                    <td class="text-muted small">@i.Category @if (!string.IsNullOrWhiteSpace(i.Color))
                        {
                            <span>· @i.Color</span>
                        }</td>
                    <td class="text-end">@i.UnitPrice.ToString("C")</td>
                    <td>@i.Quantity</td>
                    <td class="text-end">@i.LineTotal.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3"></th>
                <th class="text-end">Total:</th>
                <th class="text-end">@Model.Total.ToString("C")</th>
            </tr>
        </tfoot>
    </table>
</div>

<a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
